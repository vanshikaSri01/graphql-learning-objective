extend schema
  @link(
    url: "https://specs.apollo.dev/federation/v2.3",
    import: ["@key"]
  )

type Book @key(fields: "id") {
  id: ID!
  title: String
  publishedYear: Int
  authorId: ID!
}

type Query {
  getAllBooks: [Book]
  getBookById(id: ID!): Book
}

# ðŸ‘‡ New Mutation Type
type Mutation {
  addBook(title: String!, publishedYear: Int!, authorId: ID!): Book
}
